pipeline {
    agent any
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    bat """
                    cd server
                    docker build -t hirentimbadiya/notes-backend .
                    """
                }
            }
        }

        stage('Login To DockerHub') {
            steps {
                withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub_password')]) {
                    bat """
                    docker logout
                    docker login -u hirentimbadiya -p ${dockerhub_password}
                    """
                }
            }
        }

        stage("Push Image To DockerHub") {
            steps {
                script {
                    bat 'docker push hirentimbadiya/notes-backend'
                }
            }
        }

        stage("Get the Image Digest") {
            steps {
                script {
                    dockerImageWithDigest = bat(script: "docker image inspect --format='{{index .RepoDigests 0}}' hirentimbadiya/notes-backend")
                    bat "echo ${dockerImageWithDigest}"
                }
            }
        }
    }
}